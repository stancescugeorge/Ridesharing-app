<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_sim_stroke">

    <ImageView
        android:id="@+id/img_adapter_cursa_profil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/profil_profil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_adapter_cursa_nume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/curseAdapter_text_numele_soferului"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_adapter_cursa_profil"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_adapter_cursa_plecare"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/plecare"
        app:layout_constraintEnd_toStartOf="@+id/img_adapter_cursa_directie"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_adapter_cursa_profil" />

    <ImageView
        android:id="@+id/img_adapter_cursa_directie"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/directie"
        app:layout_constraintEnd_toStartOf="@+id/img_adapter_cursa_destinatie"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_adapter_cursa_plecare"
        app:layout_constraintTop_toBottomOf="@+id/img_adapter_cursa_profil" />

    <ImageView
        android:id="@+id/img_adapter_cursa_destinatie"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/destinatie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_adapter_cursa_directie"
        app:layout_constraintTop_toBottomOf="@+id/img_adapter_cursa_profil" />
    <TextView
        android:id="@+id/tv_adapter_cursa_plecare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/text_locatie_de_plecare"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/img_adapter_cursa_directie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_adapter_cursa_plecare"/>

    <TextView
        android:id="@+id/tv_adapter_cursa_destinatie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/text_locatie_de_destinatie"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_adapter_cursa_directie"
        app:layout_constraintTop_toBottomOf="@+id/img_adapter_cursa_plecare"/>
    <ImageView
        android:id="@+id/img_adapter_cursa_ora"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ora"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_adapter_cursa_plecare" />
    <TextView
    android:id="@+id/tv_adapter_cursa_ora"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:text="@string/text_hh_mm"
    android:textSize="17dp"
    app:layout_constraintEnd_toStartOf="@+id/img_adapter_cursa_directie"
    app:layout_constraintStart_toStartOf="@+id/img_adapter_cursa_ora"
    app:layout_constraintTop_toBottomOf="@+id/tv_adapter_cursa_plecare"/>

    <ImageView
        android:id="@+id/img_adapter_cursa_durata"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/durata"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_adapter_cursa_directie"
        app:layout_constraintTop_toBottomOf="@+id/tv_adapter_cursa_destinatie" />
    <TextView
        android:id="@+id/tv_adapter_cursa_durata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="@string/text_durata_minute"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_adapter_cursa_durata"
        app:layout_constraintTop_toBottomOf="@+id/tv_adapter_cursa_destinatie"/>

    <ImageView
        android:id="@+id/img_adapter_cursa_pret"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/pret"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_adapter_cursa_ora"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_adapter_cursa_pret"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="@string/text_pret"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/img_adapter_cursa_telefon"
        app:layout_constraintStart_toEndOf="@+id/img_adapter_cursa_pret"
        app:layout_constraintTop_toBottomOf="@+id/img_adapter_cursa_ora"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/img_adapter_cursa_telefon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/telefon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_adapter_cursa_directie"
        app:layout_constraintTop_toBottomOf="@+id/img_adapter_cursa_durata" />
    <TextView
        android:id="@+id/tv_adapter_cursa_telefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"

        android:text="@string/curseAdapter_text_format_telefon"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_adapter_cursa_telefon"
        app:layout_constraintTop_toBottomOf="@+id/tv_adapter_cursa_durata"/>

</androidx.constraintlayout.widget.ConstraintLayout>